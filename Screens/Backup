package Screens;

import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.JPanel;
import java.awt.Color;
import java.awt.Graphics;

import B.mainScreenButton;
import C.User;
import m.*;

public class StoryScreen extends JPanel{
    //There will be two types of scenes one the introduction and second the final
    public static MainFrame theFrame;
    private static ImageIcon mom = new ImageIcon("graphs/character/story/mom.png");
    private static ImageIcon dad = new ImageIcon("graphs/character/story/dad.png");
    private static JLabel backGroundLabel = new JLabel();
    private static ImageIcon backGroundIcon = new ImageIcon("graphs/storyBG");
    private boolean isFirstScene = true;
    public StoryScreen(boolean isFirstScene)
    {
        MainFrame.currentPanel = this;
        theFrame = MainFrame.theFrame;
        theFrame.removePrevPanelsAndLabels();
        this.setLayout(null);
        JLabel backgroundLabel = new JLabel();
        backgroundLabel.setIcon(backGroundIcon);
        backgroundLabel.setBounds(0, 0, 1920, 1080);
        this.add(backgroundLabel);
        this.setBounds(0, 0, 1920, 1080);
        //Remove the previous JPanel if existant
        theFrame.removePrevPanelsAndLabels();

        this.add(backgroundLabel);

        theFrame.add(this);

        theFrame.repaint();
    }
    @Override
    protected void paintComponent(Graphics g) {
        if(isFirstScene)
        {
            this.add(User.getCharPanel());
            g.drawImage(dad.getImage(), 1200, 400, null);
            this.add(backGroundLabel);
        }

    }
}
